      }
    }
  },
  "entities": {
    "Restaurants": {
      "source": "dbo.restaurants",
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            "*"
          ]
        }
      ]
    },
    "Menu": {
      "source": "dbo.menu_items",
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            "*"
          ]
        }
      ]
    }
  }
}